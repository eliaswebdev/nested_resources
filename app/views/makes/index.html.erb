<div class="d-flex flex-direction-row justify-content-between align-items-center">
  <h1>Makes</h1>
  <%= link_to 'New Make', new_make_path, class: 'btn btn-primary' %>
</div>
<p id="notice"><%= notice %></p>
<table class="table">
  <thead>
    <tr>
      <th width="10">ID</th>
      <th>Name</th>
      <th>Models</th>
      <th width="300">Options</th>
    </tr>
  </thead>
  <tbody>
    <% @makes.each do |make| %>
      <tr class="align-middle">
        <td><%= make.id %></td>
        <td><%= make.name %></td>
        <td>
          <%= link_to "Manage Models (#{make.models.count} count)", make_models_path(make), class: 'btn btn-dark' %>
        </td>
        <td>
          <%= link_to 'Show', make, class: 'btn btn-info' %>
          <%= link_to 'Edit', edit_make_path(make), class: 'btn btn-primary' %>
          <%= link_to 'Destroy', make, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
