<p id="notice"><%= notice %></p>
<div class="d-flex flex-direction-row justify-content-between align-items-center">
  <h1>
    <%= @make&.name %> / <%= @model&.name %> / Trims
  </h1>
  <div>
    <%= link_to 'New Trim', new_make_model_trim_path(@make, @model), class: 'btn btn-primary' %>
    <%= link_to 'Back', make_path(@make), class: 'btn btn-secondary' %>
  </div>
</div>
<table class="table">

  <thead>
    <tr>
      <th width="10">ID</th>
      <th>Name</th>
      <th width="300">Options</th>
    </tr>
  </thead>
  <tbody>
    <% @trims.each do |trim| %>
      <tr class="align-middle">
        <td><%= trim.id %></td>
        <td><%= trim.name %></td>
        <td>
          <%= link_to 'Show', make_model_trim_path(@make, @model, trim), class: 'btn btn-info' %>
          <%= link_to 'Edit', edit_make_model_trim_path(@make, @model, trim), class: 'btn btn-primary' %>
          <%= link_to 'Destroy', make_model_trim_path(@make, @model, trim), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
