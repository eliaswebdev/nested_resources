<p id="notice"><%= notice %></p>
<div class="d-flex flex-direction-row justify-content-between align-items-center">
  <h1>
    <%= @make&.name %>
    Models
  </h1>
  <div>
    <%= link_to 'New Model', new_make_model_path(@make), class: 'btn btn-primary' %>
    <%= link_to 'Back', make_path(@make), class: 'btn btn-secondary' %>
  </div>
</div>
<table class="table">
  <thead>
    <tr>
      <th width="10">ID</th>
      <th>Name</th>
      <th>Trims</th>
      <th width="300">Options</th>
    </tr>
  </thead>
  <tbody>
    <% @models.each do |model| %>
      <tr>
        <td><%= model.id %></td>
        <td><%= model.name %></td>
        <td>
          <%= link_to "Manage Trims (#{model.trims.count} count)", make_model_trims_path(@make, model), class: 'btn btn-dark' %>
        </td>
        <td>
          <%= link_to 'Show', make_model_path(@make, model), class: 'btn btn-info' %>
          <%= link_to 'Edit', edit_make_model_path(@make, model), class: 'btn btn-primary' %>
          <%= link_to 'Destroy', make_model_path(@make, model), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

